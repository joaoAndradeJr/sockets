<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="chat.css" />
    
    <title>webchat</title>
  </head>
  <body class="main">
    
    <section class="container">
      <div class="users-container">
        <div>
          <label for="nickname-box">
            <input
              id="nickname-box"
              data-testid="nickname-box"
              type="text"
              placeholder="Type your nickname here"
            />  
          </label>
          <button
            type="button"
            id="nickname-button"
            data-testid="nickname-button"
          >
            Save Nickname
          </button>
        </div>
        <div class="online-users">
          <h3>UsuÃ¡rios Online</h3>
          <ul id="usersOnline"></ul>
        </div>
      </div>
      <div class="messages-container">
        <div class="all-messages">
          <ul id="messages"></ul>
        </div>
      </div>
      <div class="type-message-container">
        <div class="type-messages">
          <label for="message-box">
            <input
              id="message-box"
              data-testid="message-box"
              type="text"
              placeholder="Type the message here"
            />
          </label>
          <button
            id="send-button"
            data-testid="send-button"
            type="button"
          >
            Send Message
          </button>
        </div>
      </div>
    </section>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      window.onbeforeunload = function(event) {
        socket.disconnect();
      };
      
      const socket = io();
      
      const messageBoxList = document.getElementById('messages');
      const insertMessage = (message) => {
        const li = document.createElement('li');
        li.setAttribute('data-testid', 'message');
        li.innerText = message;
        messageBoxList.appendChild(li);
      };
      
      const sendMessageBtn = document.getElementById('send-button');
      sendMessageBtn.addEventListener('click', () => {
        const nickname = socket.id.substr(0, 15);
        const chatMessage = document.getElementById('message-box').value;
        socket.emit('message', { chatMessage, nickname });
        document.getElementById('message-box').value = '';
      });
      
      const onlineUsers = document.getElementById('usersOnline');
      const insertOnlineUser = (nickname) => {
        const li = document.createElement('li');
        li.setAttribute('data-testid', 'online-user');
        li.innerText = nickname;
        onlineUsers.appendChild(li);
      }

      const changeNickname = document.getElementById('nickname-button');
      changeNickname.addEventListener('click', () => {
        newNickname = document.getElementById('nickname-box').value;
        socket.emit('changeNickname', newNickname);
      });

      const InsertHistory = (history) => {
        
        history.forEach((oldMessage) => {
          const { message, nickname, timestamps } = oldMessage;
          insertMessage(`${timestamps} - ${nickname}: ${message}`);
        });
      };
      
      socket.on('userOnline', (userId) => insertOnlineUser(userId));
      socket.on('chatHistory', (history) => InsertHistory(history));
      socket.on('message', (message) => insertMessage(message));
      
      </script>
  </body>
</html>
